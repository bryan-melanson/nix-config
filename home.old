{ config, pkgs, ... }:

{
  home.username = "bryan";
  home.homeDirectory = "/home/bryan";

  home.stateVersion = "23.05"; # Please read the comment before changing.

  home.packages = [
    (pkgs.nerdfonts.override { fonts = [ "JetBrainsMono" ]; })

    pkgs.lazygit
    pkgs.ripgrep
    pkgs.fd
    pkgs.gcc
    pkgs.feh
    pkgs.alacritty

    (pkgs.writeShellScriptBin "esp-shell" ''
	nix --experimental-features 'nix-command flakes' develop github:mirrexagon/nixpkgs-esp-dev#esp32-idf
    '')
  ];

  home.sessionVariables = {
    EDITOR = "nvim";
  };

  programs.git = {
    enable = true;
    userName = "Bryan Melanson";
    userEmail = "hello@bryan.horse";
  };

  programs.zsh = {
    enable = true;
    shellAliases = {
      ll = "ls -l";
      update = "sudo nixos-rebuild switch";
      config = "git --git-dir=$HOME/.cfg/ --work-tree=$HOME";
    };
    enableAutosuggestions  = true;
    oh-my-zsh = {
      enable = true;
      plugins = [ "git" ];
      theme = "af-magic";
    };
  };

  home.file."dotfiles" = {
    source = builtins.fetchGit {
      url = "https://github.com/bryan-melanson/dotfiles.git";
      ref = "master";
    };
    target = "${config.home.homeDirectory}/dotfiles";
  };

  home.file = {
    ".config/nvim" = {
    	source = "/${config.home.homeDirectory}/dotfiles/nvim";
      target = "/${config.home/homeDirectory}/.config/nvim";
    };
    ".config/polybar" = {
      source = "/${config.home.homeDirectory}/dotfiles/polybar";
      target = "/${config.home.homeDirectory}/.config/polybar";
    };
  };

  programs.home-manager.enable = true;
}
